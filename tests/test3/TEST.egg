option auto = false;
option version = 0.0.1;
option k = 1;

inh source : SourceUnit for S;

space  separateur  is    "[\n\r\t ]+" ;
term   entier      is    "[0-9]+" ;

S -> entier #a ;
#a {
    BOOLEAN test1 := 1 + 2 = 3 && 1 < 2;
    BOOLEAN test2 := 1 >= 1 && true && !(1=2);
    BOOLEAN test3 := 1 >= 0 || 2 <= 3;
    BOOLEAN test4 := 1+2*3 = 7 && (false || 42=42);

    write("test1 = " + test1 + "\n");
    write("test2 = " + test2 + "\n");
    write("test3 = " + test3 + "\n");
    write("test4 = " + test4 + "\n");
    write("lu = " + entier^txt + "\n");
}
